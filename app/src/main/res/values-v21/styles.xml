<resources>
@
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">#927a7a</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    
    
    <style name="gridMain" parent="AppTheme">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        
    </style>

    <style name="divMatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Text_widthMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Text_widthWrap" parent="Text_widthMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>



</resources>
